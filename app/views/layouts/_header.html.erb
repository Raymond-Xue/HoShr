<%#Author: Hanting Ge%>
<style>
  .headshot
  {
    width: 20px;
    height: 20px;
    border-radius: 50%;
  }
  table, div
  {
    text-align: center;
  }
  section
  {
    text-align: center;
    font-size: 20px;
  }

</style>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Hoshr", root_path, id: "logo" %>
    <nav>
		<div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
                data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1"
                aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
    </div>
      
        
    <%= form_tag(search_result_path, remote: true, method: :get, class: 'navbar-form navbar-left') do %>
      <div class="input-group">
            
            <!--<%= label_tag(:city_name_search, 'LOCATION') %>-->
            <%= text_field_tag :city_name, nil, onkeyup: 'Rails.fire(this.form, "submit")', placeholder: 'Add a city, landmark, or address', class: 'form-control' %>
            
            <div class="input-group-btn">  
              <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
            </div>
      </div>
    <% end %>
        
        
      
      <ul class="nav navbar-nav navbar-right collapse navbar-collapse"
          id="bs-example-navbar-collapse-1">
        
        <% if logged_in? %>
          <li><%= link_to "Users", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <% if current_user.avatar.attached? %>
                <%= image_tag url_for(current_user.avatar), class: "headshot"%>
              <% else %>
                Account
              <% end %> 
              
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
