<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
.dt
{
float:left;
margin-left: 3%;
margin-right: 3%;
}
    .btn {
      width:50%;
      font-family: "Raleway", sans-serif;
      font-weight: 500;
      font-size: 14px;
      letter-spacing: 1px;
      display: inline-block;
      padding: 12px 32px;
      border-radius: 50px;
      transition: 0.5s;
      line-height: 1;
      margin: 10px;
      color: #fff;
      -webkit-animation-delay: 0.8s;
      animation-delay: 0.8s;
      border: 2px solid #e96b56;
      background: #e96b56;
    }
	p
	  {      
	  font-family: "Raleway", sans-serif;
      font-weight: 500;
      font-size: 14px;
      letter-spacing: 1px;
	  }

</style>
<p id="notice"><%= notice %></p>

<h3 class="my-3">My Lessor Request</h3>
<%if @lessor_requests.count == 0%>
	<p>Please post at least one lessor request under any property you posted before.</p>
<%else%>
    <section id="services" class="services">
      <div class="container">
        <div class="row">
		<%i = 1%>
		<% @lessor_requests.each do |lessor_request| %>
          <div class="col-lg-6 align-items-stretch" id = "aaa">
            <div class="icon-box">
			  <div class="icon"><i class="fa fa-book"></i></div>
              <h4><%="Request " + i.to_s%></h4>
			  <%i = i + 1%>
              <table class="table">
				<tbody>
					<tr>
						<td>Property Address</td>
      					<td><%= link_to Property.find(lessor_request.property_id).street_address, Property.find(lessor_request.property_id) %></td>
					</tr>
					<tr>
						<td>Property Location</td>
      					<td><%= City.find(Property.find(lessor_request.property_id).city_id).city_name + ', ' +  State.find(Property.find(lessor_request.property_id).state_id).state_abbr + ', ' + Country.find(Property.find(lessor_request.property_id).country_id).country_name%></td>
					</tr>
					<tr>
						<td>Earliest Move in Date</td>
      					<td><%= lessor_request.earliest_movein_date%></td>
					</tr>
					<tr>
						<td>Total Rent(USD)</td>
      					<td><%= lessor_request.total_rent %></td>
					</tr>
					<tr>
						<td>Min Duration(Month)</td>
      					<td><%= lessor_request.min_duration %></td>
					</tr>
      				
					
				</tbody>
			  </table>
			<%= link_to 'Cancel', lessor_request, method: :delete, class: 'btn'%>
            </div>
          </div>

		<%end%>
        </div>

      </div>
    </section>
<%end%>
