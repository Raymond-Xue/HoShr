<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Owner</th>
      <th>N bedrooms</th>
      <th>N bathrooms</th>
      <th>Haskitchen</th>
      <th>Hassmokedetector</th>
      <th>Hasairconditioning</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.latitude %></td>
        <td><%= property.longitude %></td>
        <td><%= property.street_address %></td>
        <td><%= property.city_id %></td>
        <td><%= property.state_id %></td>
        <td><%= property.country_id %></td>
        <td><%= property.owner_id %></td>
        <td><%= property.n_bedrooms %></td>
        <td><%= property.n_bathrooms %></td>
        <td><%= property.hasKitchen %></td>
        <td><%= property.hasSmokeDetector %></td>
        <td><%= property.hasAirConditioning %></td>
        <td><%= property.type_id %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

