<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
.dt
{
float:left;
margin-left: 3%;
margin-right: 3%;
}

</style>
<p id="notice"><%= notice %></p>

<h1 class="text-center my-5">
  <%= @user.username %>
</h1>

<h3 class="my-3">My Lessee:</h3>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Lessee ID</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Move in Date Range</th>
    <th>Duration Range(Month)</th>
    <th>Max Rent(USD)</th>
    <th>Max Housemates</th>
    <th colspan="3"></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @lessee_requests.each do |lessee_request| %>
    <tr>
      <td><%= lessee_request.id %></td>
      <td><%= City.find(lessee_request.city_id).city_name %></td>
      <td><%= State.find(lessee_request.state_id).state_name %></td>
      <td><%= Country.find(lessee_request.country_id).country_name %></td>
      <td><%= lessee_request.earliest_movein_date.to_s + " to " +  lessee_request.latest_movein_date.to_s%></td>
      <td><%= lessee_request.min_duration.to_s + " to " +  lessee_request.max_duration.to_s%></td>
      <td><%= lessee_request.max_rent %></td>
      <td><%= lessee_request.max_n_housemates %></td>
      <td><%= link_to ' Detail', lessee_request, class: 'fa fa-arrow-right'%></td>
      <td><%= link_to ' Cancel', "/cancel/#{lessee_request.id}", class: 'fa fa-times', method: :post %></td>
    </tr>
  <% end %>

  </tbody>
</table>
<div class="button">
<div class="dt"><%= link_to ' View my Group', my_group_path, class: 'fa fa-users'%></div>
<div class="dt"><%= link_to ' View my Recommendation', recommendation_path, class: 'fa fa-thumbs-o-up'%></div>
<div class="dt"><%= link_to ' New Lessee Request', new_lessee_request_path, class: 'fa fa-home'%></div>
</div>
