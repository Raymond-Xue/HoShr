<p id="notice"><%= notice %></p>

<h1>States</h1>

<table>
  <thead>
    <tr>
      <th>State name</th>
      <th>Country</th>
      <th>Max latitude</th>
      <th>Min latitude</th>
      <th>Max longitude</th>
      <th>Min longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state_name %></td>
        <td><%= state.country_id %></td>
        <td><%= state.max_latitude %></td>
        <td><%= state.min_latitude %></td>
        <td><%= state.max_longitude %></td>
        <td><%= state.min_longitude %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

