<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Property</th>
      <th>Area</th>
      <th>Area unit</th>
      <th>Hasbalcony</th>
      <th>Hasprivatebath</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_id %></td>
        <td><%= room.property_id %></td>
        <td><%= room.area %></td>
        <td><%= room.area_unit %></td>
        <td><%= room.hasBalcony %></td>
        <td><%= room.hasPrivateBath %></td>
        <td><%= room.status %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

